page {
  background: #FFFFFF;
}
.content {
  background: #FFFFFF;
  height: 100%;
}
.content .divider {
  width: 100%;
  height: 16rpx;
  background: #F8F8F8;
}
.content .product-box {
  margin: 32rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .product-box .img-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.content .product-box .img-box image {
  width: 100%;
  height: 100%;
}
.content .product-box .info-box {
  margin-left: 32rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.content .product-box .info-box .product-title {
  font-size: 28rpx;
  color: #222222;
  line-height: 40rpx;
  display: -webkit-box;
  /*将对象转为弹性盒模型展示*/
  -webkit-box-orient: vertical;
  /*设置弹性盒模型子元素的排列方式*/
  -webkit-line-clamp: 2;
  /*限制文本行数*/
  overflow: hidden;
  /*超出隐藏*/
}
.content .product-box .info-box .product-Specifications {
  font-size: 28rpx;
  color: #999999;
  margin-top: 16rpx;
}
.content .order-info,
.content .my-logistics {
  margin: 32rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content .order-info .title,
.content .my-logistics .title {
  font-size: 28rpx;
  color: #222222;
  font-weight: 500;
  line-height: 40rpx;
}
.content .order-info .info-box,
.content .my-logistics .info-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .order-info .info-box .order-id,
.content .my-logistics .info-box .order-id {
  color: #999999;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-right: 32rpx;
}
.content .order-info .logistics-box,
.content .my-logistics .logistics-box {
  width: 70%;
}
.content .order-info .logistics-box .logistics-input,
.content .my-logistics .logistics-box .logistics-input {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #222222;
}
.content .button-box {
  position: fixed;
  width: 100%;
  height: 88rpx;
  bottom: 0;
  left: 0;
}
.content .button-box .button {
  width: 100%;
  height: 100%;
  line-height: 88rpx;
  text-align: center;
  color: #FFFFFF;
  background: #CECECE;
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  border-radius: 0;
}
.content .button-box .button::after {
  border: none;
}
.content .button-box .active {
  background: #ED494C;
}

