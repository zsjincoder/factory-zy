page {
  background: #FFFFFF;
}
.content .divider {
  width: 100%;
  height: 16rpx;
  background: #F8F8F8;
}
.content .product-box {
  margin: 32rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .product-box .img-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.content .product-box .img-box image {
  width: 100%;
  height: 100%;
}
.content .product-box .info-box {
  margin-left: 32rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.content .product-box .info-box .product-title {
  font-size: 28rpx;
  color: #222222;
  line-height: 40rpx;
  display: -webkit-box;
  /*将对象转为弹性盒模型展示*/
  -webkit-box-orient: vertical;
  /*设置弹性盒模型子元素的排列方式*/
  -webkit-line-clamp: 2;
  /*限制文本行数*/
  overflow: hidden;
  /*超出隐藏*/
}
.content .product-box .info-box .product-Specifications {
  font-size: 28rpx;
  color: #999999;
  margin-top: 16rpx;
}
.content .operate-box .radio-group {
  width: 100%;
}
.content .operate-box .radio-group .item-box {
  border-bottom: 2rpx solid #EEEEEE;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .operate-box .radio-group .item-box .item {
  margin: 0 32rpx;
  padding: 32rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content .operate-box .radio-group .item-box .item .item-left .item-title {
  font-size: 28rpx;
  color: #222222;
  font-weight: 500;
}
.content .operate-box .radio-group .item-box .item .item-left .item-remask {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}
.content .operate-box .radio-group .item-box .item .item-right {
  width: 40rpx;
  height: 40rpx;
  margin-top: 26rpx;
}
.content .operate-box .radio-group .item-box .item .item-right .radio {
  display: none;
}
.content .operate-box .radio-group .item-box .item .item-right .img-box {
  width: 100%;
  height: 100%;
}
.content .operate-box .radio-group .item-box .item .item-right .img-box image {
  width: 100%;
  height: 100%;
}
.content .tips-box {
  margin: 32rpx;
  font-size: 22rpx;
