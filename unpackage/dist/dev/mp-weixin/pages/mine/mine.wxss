.content {
  height: 100%;
  background: #FFFFFF;
  padding-bottom: 48rpx;
}
.content .header_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 32rpx 32rpx 48rpx;
}
.content .header_box .head_img {
  width: 128rpx;
  height: 128rpx;
  position: relative;
}
.content .header_box .head_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.content .header_box .head_img .button-box {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.content .header_box .head_img .button-box .button {
  width: 100%;
  height: 100%;
  line-height: 128rpx;
  text-align: center;
  opacity: 0;
}
.content .header_box .head_img .button-box .button::after {
  border: none;
}
.content .header_box .head_info {
  margin: 16rpx 0 16rpx 32rpx;
}
.content .header_box .head_info .name {
  line-height: 96rpx;
  font-weight: 500;
  font-size: 34rpx;
  color: #222222;
}
.content .header_box .head_info .phone_num {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #999999;
}
.content .divider {
  width: 100%;
  height: 16rpx;
  background: #F8F8F8;
}
.content .list-box {
  background: #FFFFFF;
  padding: 0 32rpx;
}
.content .list-box .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 112rpx;
  border-bottom: 2rpx solid #EEEEEE;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .list-box .item .item-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .list-box .item .item-left .item-img {
  width: 48rpx;
  height: 48rpx;
  margin-top: 32rpx;
}
.content .list-box .item .item-left .item-img image {
  width: 100%;
  height: 100%;
}
.content .list-box .item .item-left .item-name {
  font-size: 28rpx;
  color: #222222;
  line-height: 112rpx;
  margin-left: 16rpx;
}
.content .list-box .item .item-right image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 40rpx;
}

