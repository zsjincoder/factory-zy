.content {
  background: #FFFFFF;
  height: 100%;
}
.content .divider {
  width: 100%;
  height: 16rpx;
  background: #F8F8F8;
}
.content .change-box {
  margin: 0 32rpx;
}
.content .change-box .img-box {
  width: 96rpx;
  height: 96rpx;
  margin: 48rpx auto 32rpx;
}
.content .change-box .img-box image {
  width: 100%;
  height: 100%;
}
.content .change-box .phone-box {
  text-align: center;
  font-size: 32rpx;
  color: #222222;
}
.content .change-box .code-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 104rpx;
  border-bottom: 2rpx solid #EEEEEE;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .change-box .code-box .input-box {
  height: 100%;
}
.content .change-box .code-box .input-box input {
  height: 100%;
  line-height: 104rpx;
  font-size: 28rpx;
}
.content .change-box .code-box .button {
  font-size: 28rpx;
  color: #ED4A4C;
  line-height: 104rpx;
}
.content .change-box .button-box {
  margin-top: 80rpx;
}
.content .change-box .button-box .next-step {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #CECECE;
  text-align: center;
  color: #FFFFFF;
}
.content .change-box .button-box .next-step::after {
  border: none;
}
.content .change-box .button-box .active {
  background: #ED4A4C;
}

