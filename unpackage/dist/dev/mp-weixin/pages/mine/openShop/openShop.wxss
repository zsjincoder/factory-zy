.content {
  background: #FFFFFF;
  min-height: 100%;
}
.content .divider {
  width: 100%;
  height: 16rpx;
  background: #F8F8F8;
}
.content .open-shop-box {
  margin: 0 32rpx;
}
.content .open-shop-box .open-shop-title {
  margin: 48rpx 0 32rpx;
  font-size: 28rpx;
  color: #222222;
  font-weight: 500;
}
.content .open-shop-box .shop-type .radio-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .open-shop-box .shop-type .radio-group .radio-box {
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
  margin-top: 48rpx;
}
.content .open-shop-box .shop-type .radio-group .radio-box .radio {
  display: none;
}
.content .open-shop-box .shop-type .radio-group .radio-box .img-box {
  width: 100%;
  height: 100%;
}
.content .open-shop-box .shop-type .radio-group .radio-box .img-box image {
  width: 100%;
  height: 100%;
}
.content .open-shop-box .shop-type .radio-group .radio-name {
  margin: 48rpx 0 0 16rpx;
  font-size: 28rpx;
  color: #222222;
  height: 40rpx;
  line-height: 40rpx;
}
.content .open-shop-box .button-box {
  margin-top: 80rpx;
}
.content .open-shop-box .button-box .button {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  border-radius: 8rpx;
  background: #CECECE;
}
.content .open-shop-box .button-box .button::after {
  border: none;
}
.content .open-shop-box .button-box .active {
  background: #ED494C;
}
.content .remaks-box {
  width: 568rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.content .remaks-box .title {
  height: 168rpx;
  line-height: 168rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #222222;
  border-bottom: 2rpx solid #EEEEEE;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.content .remaks-box .btn-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 106rpx;
}
.content .remaks-box .btn-group .cancel-btn,
.content .remaks-box .btn-group .define-btn {
  width: 50%;
  line-height: 106rpx;
  font-size: 28rpx;
  text-align: center;
}
.content .remaks-box .btn-group .cancel-btn {
  color: #999999;
}
.content .remaks-box .btn-group .define-btn {
  border-left: 2rpx solid #EEEEEE;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  color: #ED494C;
}

