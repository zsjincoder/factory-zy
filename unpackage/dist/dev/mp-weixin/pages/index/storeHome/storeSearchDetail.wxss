.content {
  padding: 32rpx 32rpx;
  background: #FFFFFF;
}
.content .search-box {
  width: 100%;
  height: 78rpx;
  position: relative;
  border-radius: 36rpx;
  background: #F4F4F4;
  z-index: 100;
}
.content .search-box .search-icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 20rpx;
  left: 20rpx;
}
.content .search-box .search-icon image {
  width: 100%;
  height: 100%;
}
.content .search-box .search-input {
  width: 100%;
  height: 100%;
  line-height: 78rpx;
  border: none;
  outline: none;
  margin-left: 62rpx;
  font-size: 28rpx;
}
.content .product-list {
  margin-bottom: 20rpx;
}
.content .product-list .product-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content .product-list .product-box .product-left,
.content .product-list .product-box .product-right {
  width: 334rpx;
}
.content .product-list .product-box .product-left .product-item,
.content .product-list .product-box .product-right .product-item {
  border-radius: 8rpx;
  border: 2rpx solid #EEEEEE;
  margin-top: 16rpx;
  background: #FFFFFF;
  overflow: hidden;
}
.content .product-list .product-box .product-left .product-item .product-image,
.content .product-list .product-box .product-right .product-item .product-image {
  width: 334rpx;
  height: 334rpx;
}
.content .product-list .product-box .product-left .product-item .product-image image,
.content .product-list .product-box .product-right .product-item .product-image image {
  width: 100%;
  height: 100%;
}
.content .product-list .product-box .product-left .product-item .product-script-box,
.content .product-list .product-box .product-right .product-item .product-script-box {
  margin: 16rpx;
}
.content .product-list .product-box .product-left .product-item .product-script-box .product-title,
.content .product-list .product-box .product-right .product-item .product-script-box .product-title {
  font-size: 29rpx;
  line-height: 42rpx;
  color: #222222;
  display: -webkit-box;
  /*将对象转为弹性盒模型展示*/
  -webkit-box-orient: vertical;
  /*设置弹性盒模型子元素的排列方式*/
  -webkit-line-clamp: 2;
  /*限制文本行数*/
  overflow: hidden;
  /*超出隐藏*/
}
.content .product-list .product-box .product-left .product-item .product-script-box .product-script,
.content .product-list .product-box .product-right .product-item .product-script-box .product-script {
  margin-top: 16rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 50rpx;
}
.content .product-list .product-box .product-left .product-item .product-script-box .product-script .product-price,
.content .product-list .product-box .product-right .product-item .product-script-box .product-script .product-price {
  color: #ED494C;
  font-size: 24rpx;
  line-height: 50rpx;
}
.content .product-list .product-box .product-left .product-item .product-script-box .product-script .product-price .product_price,
.content .product-list .product-box .product-right .product-item .product-script-box .product-script .product-price .product_price {
  font-size: 36rpx;
}
.content .product-list .product-box .product-left .product-item .product-script-box .product-script .product-num,
.content .product-list .product-box .product-right .product-item .product-script-box .product-script .product-num {
